<header class="hero">
	<div class="hero__inner">
		<div class="hero__text-content">
			{% if props.heroHeading %}
				<h1 class="hero__heading">{{ props.heroHeading | safe }}</h1>
			{% endif %}
			{% if props.heroHeading2 %}
				<h1 class="hero__heading">{{ props.heroHeading2 | safe }}</h1>
			{% endif %}
			{% if props.heroHeading3 %}
				<h1 class="hero__heading">{{ props.heroHeading3 | safe }}</h1>
			{% endif %}
			<span class="hero__services-label">Competencies:</span>
			<div class="hero__services">
				{{ button_link_alternate('Shopify Development', '/about', false) }}
				{{ button_link_alternate('Craft CMS', '/about', false) }}
				{{ button_link_alternate('SharePoint Development', '/about', false) }}
				{{ button_link_alternate('Wordpress', '/about', false) }}
				{{ button_link_alternate('Jamstack', '/about', false) }}
				{# <a class="hero__services-all" href="">See the full list
					{% svg "arrow" %}
				</a> #}
				{{ arrow_link('See the full list', '/services') }}
			</div>
			<div class="hero__help">
				<div class="hero__help-text">
					Need help on your next web project?
				</div>
				{{ button_link("Let's Chat", '/contact', true) }}
			</div>
		</div>
		<div class="hero__image-wrapper">
			{% if props.heroImage %}
				{% image props.heroImage, 'Stargazing', 'hero__image', "eager", "(min-width: 36rem) 100vw, 50vw", ['400', '450', '500', '600'] %}
			{% endif %}
		</div>
	</div>
</header>