{% if portfolioListItems.length %}
  <section class="work-list">
    <div class="work-list__wrapper">
      <h2 class="work-list__heading">{{ portfolioListHeading }}</h2>
        {% for item in portfolioListItems %}
          {% if item.date.getTime() <= global.now %}
            <div class="work-list__card">
              <img src={{ portfolioImage }} />
              <h3>
                <a href="{{ item.url }}" class="work-list__link" rel="bookmark">{{ item.data.title }}</a>
              </h3>
              <p>
                {{ item.data.tags }}
              </p>
            </div>
          {% endif %}
        {% endfor %}
    </div>
  </section>
{% endif %}

