{% from "macros/macros.njk" import button_link %}

<section class="work-panel{% if props.isBottom === true %} work-panel--bottom{% endif %}">
  <div class="work-panel__divider">
    {# <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M1200 120L0 16.48 0 0 1200 0 1200 120z" class="shape-fill"></path>
    </svg> #}
        {# <svg class="" width="1680" height="120" viewBox="0 0 1680 120" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M0 14L560 82L1120 54L1680 0V120H1120H560H0V14Z" fill="#ECD8D5" class="shape-fill"/>
  </svg> #}
      <svg width="1680" height="120" viewBox="0 0 1680 120" fill="none" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">
        <path class="shape-fill" d="M1242.5 92L342 30L0 46.5V120H1679V30L1242.5 92Z"/>
    </svg>
  </div>
  <div class="work-panel__inner{% if props.imagePosition === 'right' %} work-panel_co_inner--reverse{% endif %}" style="background-color: {{colorHexCard}};">
    <div class="work-panel__row work-panel__heading-wrapper">
        <div class="h3" data-sal="fade" data-sal-delay="200">{{ props.title }}</div>
        <h2 data-sal="slide-up" data-sal-delay="400" class="">{{ props.titleSecondary }}</h2>
    </div> 
    <div class="work-panel__row work-panel__items">
      {% for item in props.items %} 
        <div class="work-panel__item">
          {# <h3 class="work-panel__text-title work-panel__text-title--mobile">{{ item.title }}</h3> #}


          <div data-sal="slide-up" data-sal-delay="200" class="work-panel__image{% if item.imagePosition === 'right' %} work-panel__image--reverse{% endif %}">
            {% if item.imageURL.length %}
              {% image item.imageURL, item.imageAlt, null, "lazy", "100vw", ['300', '400', '576', '600', '730', '900', '1046', '1100', '1500', '2000', '3000'] %}
            {% endif %}
          </div>
          <div class="work-panel__text{% if item.imagePosition === 'right' %} work-panel__text--reverse{% endif %}">

            <div data-sal="slide-up" data-sal-delay="200" class="work-panel__text-top">
              <h3 class="work-panel__text-title">{{ item.title }}</h3>

              <ul class="work-panel__tags tags__list">
                {% for tag in item.tags %}
                  <li class="tag"><a class="tag__link">{{ tag.label }}</a></li>
                {% endfor %}
              </ul>
            </div>
            <div data-sal="slide-up" data-sal-delay="200" class="work-panel__text-bottom">
              <div class="work-panel__text-summary">{{ item.summary | safe }}</div>
                  {% if item.buttonText.length and item.buttonPath.length %}
                    {{ arrow_link(item.buttonText, item.buttonPath) }}
                  {% endif %}
                  {% if item.linkText.length and item.linkPath.length %}
                    {{ external_link(item.linkText, item.linkPath) }}
                  {% endif %}
              </div>
            </div>
            


        </div>
      {% endfor %}
    </div>

     {# <div data-sal="fade" data-sal-delay="200" class="work-panel__button-wrapper">
      {{ button_link ("See all", "/portfolio", true)}}
      </div> #}
  </div>
</section>

  <style>
    .work-panel__divider {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      overflow: hidden;
      line-height: 0;
    }

    .work-panel__divider svg {
      position: relative;
      display: block;
      width: calc(100% + 1.3px);
      height: 120px;
      transform: rotateX(180deg);
    }

    .work-panel__divider .shape-fill {
      {# fill: #B4CECF;
      fill: #ECD8D5; #}
      fill: #FFF9EF;
    }
  </style>


