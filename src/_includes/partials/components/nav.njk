{% if navigation.items %}
  <nav class="nav" aria-label="{{ariaLabel}}">
    <ul class="nav__list">
      {% for item in navigation.items %}
        {% set relAttribute = '' %}
        {% set currentAttribute = '' %}
        {% set currentClass = '' %}

        {% if item.rel %}
          {% set relAttribute = ' rel="' + item.rel + '"' %}
        {% endif %}

        {% if page.url == (item.url + '/') %}
          {% set currentAttribute = ' aria-current="page"' %}
          {% set currentClass = 'nav__item--active' %}
        {% endif %}
        <li class="nav__item {{ currentClass | safe }}">
          <a href="{{ item.url }}"{{ relAttribute | safe }}{{ currentAttribute | safe }}>{{ item.text }}
            {% if item.items %}
              <svg
                class="arrow"
                xmlns="http://www.w3.org/2000/svg"
                width="1em"
                height="1em"
                viewBox="0 0 24 24"
                focusable="false"
                aria-hidden="true"
                fill="currentColor"
              >
                <path
                  d="M9.707 18.707l6-6a.999.999 0 0 0 0-1.414l-6-6a.999.999 0 1 0-1.414 1.414L13.586 12l-5.293 5.293a.999.999 0 1 0 1.414 1.414z"
                />
              </svg>
            {% endif %}
          </a>
            {% if item.items %}
              <ul class="nav__sublist">
                {% for item in item.items %}
                    {% set relAttribute = '' %}
                    {% set currentAttribute = '' %}
                    {% set currentClass = '' %}

                    {% if item.rel %}
                      {% set relAttribute = ' rel="' + item.rel + '"' %}
                    {% endif %}

                    {% if page.url == (item.url + '/') %}
                      {% set currentAttribute = ' aria-current="page"' %}
                      {% set currentClass = 'nav__item--active' %}
                    {% endif %}

                  <li class="nav__item nav__item-secondary {{ currentClass | safe }}">
                    <a href="{{ item.url }}"{{ relAttribute | safe }}{{ currentAttribute | safe }}>{{ item.text }}</a>
                  </li>
                {% endfor %}
              </ul>
           {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>
{% endif %}
