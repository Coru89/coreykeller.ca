{% if props.backgroundColor === 'white' %}
  {% set colorHexPanel = 'var(--color-white)' %}
{% elseif props.backgroundColor === 'grey' %}
    {% set colorHexPanel = 'var(--color-grey-light)' %}
{% elseif props.backgroundColor === 'light green' %}
  {% set colorHexPanel = 'var(--color-bg-light);' %}
{% else %}
    {% set colorHexPanel = 'var(--color-white)' %}
{% endif %}

{% if props.steps.length %}
  <section class="steps" style="background-color: {{colorHexPanel}};">
    <div class="steps__inner">
      <h2 class="steps__heading">{{ props.heading }}</h2>
      <div class="steps__items" reversed>
        {% for item in props.steps %}
          <div class="steps__item">
            <div class="steps__item-number">0{{ loop.index }}</div>
            <h3 class="steps__item-title">{{ item.title }}</h3>
              <div class="steps__item-summary">{{ item.summary }}</div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}
